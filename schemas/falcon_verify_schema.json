{
  "type": "object",
  "definitions": {
    "FalconVerifyTestGroup": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["FalconVerify"],
          "description": "Indicates the type of test group."
        },
        "publicKey": {
          "type": "string",
          "format": "HexBytes",
          "description": "Encoded Falcon public key."
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FalconVerifyTestVector"
          }
        }
      },
      "required": ["type", "publicKey", "tests"]
    },
    "FalconVerifyTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case."
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case."
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to verify."
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "The encoded signature."
        },
        "result": {
          "type": "string",
          "description": "Test result.",
          "enum": ["valid", "invalid"]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags."
        }
      },
      "required": ["tcId", "msg", "sig", "result"]
    }
  },
  "properties": {
    "algorithm": {
      "type": "string",
      "description": "The primitive tested in the test file (e.g., Falcon-512, Falcon-1024)."
    },
    "generatorVersion": {
      "type": "string",
      "description": "The version of the test vector generator."
    },
    "header": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional documentation or comments."
    },
    "notes": {
      "type": "object",
      "description": "A description of the labels used in the test vectors."
    },
    "numberOfTests": {
      "type": "integer",
      "description": "The total number of test vectors in this file."
    },
    "schema": {
      "enum": ["falcon_verify_schema.json"],
      "description": "The schema file this test vector file conforms to."
    },
    "testGroups": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FalconVerifyTestGroup"
      }
    }
  },
  "required": ["algorithm", "generatorVersion", "numberOfTests", "schema", "testGroups"]
}